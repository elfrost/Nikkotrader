        },
        "datasource": "Prometheus",
        "definition": "label_values(nikkotrader_trades_total, strategy)",
        "hide": 0,
        "includeAll": true,
        "label": "Strategy",
        "multi": true,
        "name": "strategy",
        "options": [],
        "query": "label_values(nikkotrader_trades_total, strategy)",
        "refresh": 1,
        "regex": "",
        "skipUrlSync": false,
