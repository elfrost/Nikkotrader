  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "ðŸŽ¯ Strategy Win Rates (Last 24h)",
      "type": "stat",
      "targets": [
        {
          "expr": "avg by (strategy) (rate(nikkotrader_trades_total{result=\"WIN\"}[1h]) / rate(nikkotrader_trades_total[1h]) * 100)",
          "legendFormat": "{{strategy}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 60},
              {"color": "green", "value": 70}
            ]
          },
          "mappings": []
        }
      },
      "options": {
        "colorMode": "background",
        "orientation": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "textMode": "auto"
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "ðŸ“ˆ Trades by Strategy (Hourly)",
      "type": "bargauge",
      "targets": [
        {
          "expr": "sum by (strategy) (rate(nikkotrader_trades_total[1h]) * 3600)",
          "legendFormat": "{{strategy}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 10},
              {"color": "red", "value": 20}
            ]
          }
        }
      },
      "options": {
        "displayMode": "list",
        "orientation": "horizontal",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
    }
  ],
  "templating": {
    "list": [
      {
        "allValue": null,
        "current": {
          "text": "All",
