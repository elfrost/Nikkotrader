{
  "id": null,
  "title": "ðŸ“Š NIKKOTRADER V11 - Strategy Performance",
  "tags": ["nikkotrader", "strategies", "binary-options"],
  "style": "dark",
  "timezone": "browser",
  "editable": true,
  "hideControls": false,
  "graphTooltip": 1,
  "schemaVersion": 27,
  "version": 1,
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
